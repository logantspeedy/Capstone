<web-app
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4"
	id="WebApp_ID">
	<display-name>Authentication Spike</display-name>
	<listener>
		<listener-class>capstone.spike.authentication.AuthenticationListener</listener-class>
    </listener>
    <listener>
        <listener-class>capstone.spike.authentication.StateServlet</listener-class>
	</listener>
	<servlet>
		<description>
		</description>
		<display-name>Auth</display-name>
		<servlet-name>OpenIDAuthentication</servlet-name>
		<servlet-class>capstone.spike.authentication.OpenIDAuthentication</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>RequestAuthentication</display-name>
		<servlet-name>RequestAuthentication</servlet-name>
		<servlet-class>capstone.spike.authentication.RequestAuthentication</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>Logout</display-name>
		<servlet-name>Logout</servlet-name>
		<servlet-class>capstone.spike.authentication.Logout</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>GetUser</display-name>
		<servlet-name>GetUser</servlet-name>
		<servlet-class>capstone.spike.authentication.GetUser</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>Login</display-name>
		<servlet-name>Login</servlet-name>
		<servlet-class>capstone.spike.authentication.Login</servlet-class>
	</servlet>
    <servlet>
        <servlet-name>StateServlet</servlet-name>
        <servlet-class>capstone.spike.authentication.StateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StateServlet</servlet-name>
        <url-pattern>/state.json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
		<servlet-name>OpenIDAuthentication</servlet-name>
		<url-pattern>/openid</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RequestAuthentication</servlet-name>
		<url-pattern>/auth</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetUser</servlet-name>
		<url-pattern>/getUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>
